{
  "name": "use-country-list-zh",
  "version": "0.0.0-development",
  "description": "A React hook for Chinese country selector with English input filtering support",
  "license": "MIT",
  "author": "Gary Lai",
  "homepage": "https://github.com/imgarylai/use-country-list-zh#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imgarylai/use-country-list-zh.git"
  },
  "bugs": {
    "url": "https://github.com/imgarylai/use-country-list-zh/issues"
  },
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "clean": "rimraf dist coverage",
    "dev": "vite build --watch",
    "predocs": "rimraf api-docs",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "lint": "eslint .",
    "prepack": "npm run build",
    "prepare": "husky",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "react": ">=18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prettier-package-json": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.0.0",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "keywords": [
    "chinese",
    "country",
    "country-selector",
    "dropdown",
    "i18n",
    "react",
    "react-hooks",
    "select",
    "taiwan",
    "typescript"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "tests/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.config.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
